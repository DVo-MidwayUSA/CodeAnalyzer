{
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true,
    "commonjs": true
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "globals": {
    "angular": false,
    "module": false,
    "inject": false
  },
  "parserOptions": {
    "sourceType": "module" // we are always in strict mode even without 'use strict'
  },
  "rules": {
    "linebreak-style": "off", // we aren't super concerned with LF or CRLF
    "no-var": "off", // allow us to still use var
    "require-jsdoc": "off", // don't require JSDoc
    "spaced-comment": [
      1,
      "always",
      {
        "exceptions": [
          "=",
          "-"
        ],
        "markers": [
          "/",
          "@",
          "#",
          "!",
          "!<"
        ]
      }
    ], // ignore /// references
    "max-len": [
      2,
      {
        "code": 120,
        "ignoreUrls": true,
        "ignoreTrailingComments": true,
        "ignoreStrings": true,
        "ignoreComments": true
      }
    ] // ignore comments, urls, and strings
  }
}